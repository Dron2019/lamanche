extends ../layout/main
block variable
  -
    var title_page = 'Kонтакти'
    var id_page = 'page-contacts'
    var class_page = 'page-contacts'
    // var breadcrumbsBtn = 'filter'
    var breadcrumbsSubitem = [
    ]
block meta
  title= title_page
  meta(name='description', content='')
block head
  link(rel='stylesheet', href="./assets/styles/main.min.css")
block scripts
  script(defer src='./assets/scripts/vendors.bundle.js')
  script(defer src='./assets/scripts/index.bundle.js')
  script(defer src='./assets/scripts/index.js')
  script(defer src='./assets/scripts/libs.js')
  script(defer src='./assets/scripts/header.js')
  script(defer src='./assets/scripts/map.js')
block content
  .container
    include ../includes/breadcrumbs.pug
    h1.page-title #{title_page}
    .home-section-8.contact-page-section
      .home-section-8__text.home-contact-block(style="background-image: url(./assets/images/home/contacts-bg.svg)")
        .subtitle Адреса об’єкту:
        a(target='_blank' href="https://goo.gl/maps/sgHxqVUGaunDDJPU6").home-contact-block__group
          .home-contact-block__icon
            +svg('marker')
          .home-contact-block__group-text м. Київ, вул. Щекавицька, 46
        .subtitle.double-margin Відділ продажу:
        a(href="tel:0442994966").home-contact-block__group
          .home-contact-block__icon
            +svg('tel')
          .home-contact-block__group-text.subtitle +38 (044) 299 49 66
        .home-contact-block__group
          .home-contact-block__icon
            +svg('clock')
          .home-contact-block__group-text
            .text Пн-Пт: 10:00 - 19:00 
            .text Сб: 11:00 - 16:00
            .text Нд: по запису
        a(href="https://goo.gl/maps/VjrTXj3KXCQ5UWVu6" target='_blank').home-contact-block__group
          .home-contact-block__icon
            +svg('marker')
          .home-contact-block__group-text
            .text м. Київ,
            .text вул. Набережно-Хрещатицька, 49А
        +a('Показати на карті', 'gold', 'https://goo.gl/maps/sgHxqVUGaunDDJPU6')(target="_blank" class="double-margin")
      .home-section-8__map.map#map
block footer
  include ../includes/footer.pug

block header
  include ../includes/header.pug
